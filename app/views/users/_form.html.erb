<%= render 'shared/errors', obj: @user %>
<div class='row'>
  <div class='col-xs-10'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="col-sm-25">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
    <div class="form-group">
      <div class="col-sm-25">
        <%= f.text_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-25">
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="float-sm-left col-sm-10">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update", class: "btn btn-primary btn-lg") %>
      </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4">
      [ <%= link_to "Back to Pets listing", pets_path %> ]
    </div>
</div>

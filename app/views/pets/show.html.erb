<h2 align="center">Name: <%= @pet.name %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <h4 class="center"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@pet.description) %>
  <div class="pet-actions">
    <%= link_to "Edit pet information", edit_pet_path(@pet), class: "btn btn-xs btn-primary" %>
    <%= link_to "Delete this pet", pet_path(@pet), method: :delete, data: { confirm: "Do you want to delete this pet's information?"}, class: "btn btn-xs btn-danger" %>
    <%= link_to "View all pets", pets_path, class: "btn btn-xs btn-success" %>
  </div>
</div>

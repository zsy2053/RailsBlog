<h1>Listing all pets</h1>

<% @pets.each do |pet| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="pet-title">
          <%= link_to pet.name, pet_path(pet) %>
        </div>
      </div>
      <div class="pet-body">
        <%= truncate(pet.description, length: 100) %>
        <div class="pet-meta-detail">
        <small>Created by: <%= pet.user.username %>,
          <%= time_ago_in_words(pet.created_at) %> ago,
          last updated: <%= time_ago_in_words(pet.updated_at) %> ago</small>
        </div>
      </div>
      <div class="pet-actions">
        <%= link_to "Edit this pet", edit_pet_path(pet), class: "btn btn-xs btn-primary" %>
        <%= link_to "Delete this pet", pet_path(pet), method: :delete,
        data: {confirm: 'Are you sure to delete this pet information?'},
        class: "btn btn-xs btn-danger" %>
      </div>
      </div>
      </div>
<% end %>
